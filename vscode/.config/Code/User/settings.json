{
    //macOS locate at /Users/<yourname>/Library/Application Support/Code/User
    "editor.fontFamily": "Menlo, Monaco, 'Cousine for powerline', monospace",
    "editor.fontSize": 20,

    // "astyle.executable": "/usr/local/bin/astyle",
    // "astyle.cmd_options": [
    //     "--style=linux",
    //     "--indent=spaces",
    //     "--convert-tabs",
    //     "--lineend=linux",
    //     "--formatted",
    //     "--recursive",
    //     "--max-code-length=120"
    // ],

    // "python.pythonPath": "",
    // "python.linting.pycodestyleEnabled": true,
    // "python.linting.pylintEnabled": true,

    "files.trimTrailingWhitespace": true,
    "editor.rulers": [
        80,
        120
    ],
    "window.zoomLevel": 0,
    "files.autoSave": "off",

    "[javascript]": {
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "[css]": {
        "editor.tabSize": 2
    },
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "html.format.enable": true,
    "files.insertFinalNewline": true,
    "diffEditor.ignoreTrimWhitespace": true,
    // C++
    // "[c]": {
    //     "editor.defaultFormatter": "chiehyu.vscode-astyle"
    // },
    // "[cpp]": {
    //     "editor.defaultFormatter": "chiehyu.vscode-astyle"
    // },
    "files.associations": {
        "*.c": "c"
    },
    "editor.largeFileOptimizations": false,
    "workbench.colorCustomizations": {
        "diffEditor.removedTextBackground": "#FF000055",
        "diffEditor.insertedTextBackground": "#ffff0055"
    }
}
